doctype html
html
	head
		title EmergaSearch Home
	body
	h1 Building Map for #{name}
	div(style="width: 100%")
		div(style="width: 50%; float: left")
			img(src="/images/rooms.png")
		div(id="timeStamps", style="width: 50%; float: right; height: 500px; overflow: scroll")
			script(type='text/javascript').
				var months = {
					0: "January",
					1: "February",
					2: "March",
					3: "April",
					4: "May",
					5: "June",
					6: "July",
					7: "August",
					8: "September",
					9: "October",
					10: "November",
					11: "December"
				};
				var datastuff = !{(data)};
				document.write("<br>");
				for(var i = 0;i < datastuff.length;i += 1) {
					var date = new Date(datastuff[i].time);
					document.write(datastuff[i].clientID + " saw motion on " + months[date.getMonth()] + " " + date.getDate() + ", " + date.getFullYear() + " at " + date.getHours() + ":" + date.getMinutes() + ":" + date.getSeconds() + "<br>");
				}
				var elem = document.getElementById('timeStamps');
				elem.scrollTop = elem.scrollHeight;
